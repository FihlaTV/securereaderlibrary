<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="app_name">Secure Reader Library</string>
    
    <!-- Network OPML service -->
    <string name="opml_url">https://securereader.guardianproject.info/opml/opml.php</string>
	
    <bool name="repeatedly_load_network_opml">false</bool>
    <bool name="report_metrics">false</bool>
    
	<!--  Use fulltext feeds with opml service -->
	<bool name="fulltextfeeds">true</bool>
    
    <string-array name="built_in_feed_names">
        <item>Big Buffalo</item>
        <item>Applications</item>
        <item>EPubs</item>
    </string-array>
    
	<string-array name="feed_urls_with_comments">
	    <item>https://bigbuffalo.com/feed/</item>
	</string-array>
    
    
	<string-array name="built_in_feed_urls">
	    <item>https://bigbuffalo.com/feed/</item>
        <item>https://securereader.guardianproject.info/swfeed/swfeed.php</item>
        <item>https://securereader.guardianproject.info/opds/opds.php</item>
    </string-array>

	<integer name="talk_item_remote_id">-1</integer>
	<string name="talk_item_feed_url"></string>
	<string name="talk_item_xmlrpc_url">https://someserver.something/xmlrpc.php</string>
	
	<!-- FEED_REFRESH_AGE = 300000; // 5 minutes -->
	<integer name="feed_refresh_age">300000</integer>
	
	<!-- OPML_CHECK_FREQUENCY = 43200000; // .5 day -->
	<integer name="opml_check_frequency">43200000</integer>
	
	<!-- EXPIRATION_CHECK_FREQUENCY = 43200000; // .5 days -->
	<integer name="expiration_check_frequency">43200000</integer>
	
	<!-- XMLRPC_ENDPOINT -->
	<string name="xmlrpc_endpoint">https://securereader.guardianproject.info/xmlrpc.php</string>
	<string name="xmlrpc_endpoint_cert_pin"></string>

	<!-- Default values that should be referenced in Settings.java -->
	<string name="pref_default_mode">@string/pref_key_mode_optimized</string>
	<string name="pref_default_security_proxy">@string/pref_key_security_proxy_tor</string>
	<string name="pref_default_panic_action">@string/pref_key_panic_action_wipedata</string>

	<string name="pref_default_optimized_sync_frequency">@string/pref_key_sync_frequency_inbackground</string>
	<string-array name="pref_default_optimized_sync_over_wifi">
		<item>@string/pref_key_sync_summaries</item>
	</string-array>
	<string-array name="pref_default_optimized_sync_over_data">
		<item>@string/pref_key_sync_summaries</item>
	</string-array>
	<bool name="pref_default_optimized_media_rich">false</bool>
	<string name="pref_default_optimized_article_expiration">@string/pref_key_article_expiration_afterread</string>
	<bool name="pref_default_optimized_save_power_enabled">true</bool>
	<integer name="pref_default_optimized_save_power_percentage">20</integer>

	<string name="pref_default_everything_sync_frequency">@string/pref_key_sync_frequency_inbackground</string>
	<string-array name="pref_default_everything_sync_over_wifi">
		<item>@string/pref_key_sync_summaries</item>
		<item>@string/pref_key_sync_full_text</item>
		<item>@string/pref_key_sync_media</item>
	</string-array>
	<string-array name="pref_default_everything_sync_over_data">
		<item>@string/pref_key_sync_summaries</item>
		<item>@string/pref_key_sync_full_text</item>
		<item>@string/pref_key_sync_media</item>
	</string-array>
	<bool name="pref_default_everything_media_rich">true</bool>
	<string name="pref_default_everything_article_expiration">@string/pref_key_article_expiration_oneweek</string>
	<bool name="pref_default_everything_save_power_enabled">false</bool>
	<integer name="pref_default_everything_save_power_percentage">20</integer>

	<string name="article_expiration_default">OneDay</string>
	<string name="sync_mode_default">BitWise</string>
	<string name="sync_network_default">WifiAndMobile</string>

	<!-- Limit number of items to keep in database -1 for no limit -->
	<integer name="item_limit">-1</integer>
	
	<!-- Limit amount of media items to keep on disk in megabytes -1 for no limit -->
	<integer name="media_cache_size">-1</integer>

	<!-- Relaxed HTTPS checking -->
	<bool name="relaxed_https">false</bool>

</resources>
